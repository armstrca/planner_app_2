<div>
  <div>
    <h1>
      List of all dailies
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new daily
    </h2>

    <form action="/insert_daily" method="post">
      <div>
        <label for="planner_id_box">
          Planner
        </label>

        <input type="text" id="planner_id_box" name="query_planner_id">
      </div>

      <div>
        <label for="html_box">
          Html
        </label>

        <input type="text" id="html_box" name="query_html">
      </div>

      <button>
        Create daily
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Planner
        </th>

        <th>
          Html
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_dailies.each do |a_daily| %>
      <tr>
        <td>
          <%= a_daily.id %>
        </td>

        <td>
          <%= a_daily.planner_id %>
        </td>

        <td>
          <%= a_daily.html %>
        </td>

        <td>
          <%= time_ago_in_words(a_daily.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_daily.updated_at) %> ago
        </td>

        <td>
          <a href="/dailies/<%= a_daily.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
