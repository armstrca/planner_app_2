<div>
  <div>
    <h1>
      Tldraw input #<%= @the_tldraw_input.id %> details
    </h1>

    <div>
      <div>
        <a href="/tldraw_inputs">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_tldraw_input/<%= @the_tldraw_input.id %>">
          Delete tldraw input
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_tldraw_input.user_id %>
      </dd>

      <dt>
        Planner
      </dt>
      <dd>
        <%= @the_tldraw_input.planner_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_tldraw_input.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_tldraw_input.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit tldraw input
    </h2>

    <form action="/modify_tldraw_input/<%= @the_tldraw_input.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_tldraw_input.user_id %>">
      </div>

      <div>
        <label for="planner_id_box">
          Planner
        </label>

        <input type="text" id="planner_id_box" name="query_planner_id" value="<%= @the_tldraw_input.planner_id %>">
      </div>

      <button>
        Update tldraw input
      </button>
    </form>
  </div>
</div>

<hr>
