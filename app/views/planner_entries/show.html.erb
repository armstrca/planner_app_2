<div>
  <div>
    <h1>
      Planner entry #<%= @the_planner_entry.id %> details
    </h1>

    <div>
      <div>
        <a href="/planner_entries">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_planner_entry/<%= @the_planner_entry.id %>">
          Delete planner entry
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_planner_entry.user_id %>
      </dd>

      <dt>
        Planner
      </dt>
      <dd>
        <%= @the_planner_entry.planner_id %>
      </dd>

      <dt>
        Datetime start
      </dt>
      <dd>
        <%= @the_planner_entry.datetime_start %>
      </dd>

      <dt>
        Tldraw input
      </dt>
      <dd>
        <%= @the_planner_entry.tldraw_input_id %>
      </dd>

      <dt>
        Monthly
      </dt>
      <dd>
        <%= @the_planner_entry.monthly_id %>
      </dd>

      <dt>
        Daily
      </dt>
      <dd>
        <%= @the_planner_entry.daily_id %>
      </dd>

      <dt>
        Weekly
      </dt>
      <dd>
        <%= @the_planner_entry.weekly_id %>
      </dd>

      <dt>
        Extra
      </dt>
      <dd>
        <%= @the_planner_entry.extra_id %>
      </dd>

      <dt>
        Entry content
      </dt>
      <dd>
        <%= @the_planner_entry.entry_content %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <%= @the_planner_entry.location %>
      </dd>

      <dt>
        Datetime end
      </dt>
      <dd>
        <%= @the_planner_entry.datetime_end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_planner_entry.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_planner_entry.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit planner entry
    </h2>

    <form action="/modify_planner_entry/<%= @the_planner_entry.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_planner_entry.user_id %>">
      </div>

      <div>
        <label for="planner_id_box">
          Planner
        </label>

        <input type="text" id="planner_id_box" name="query_planner_id" value="<%= @the_planner_entry.planner_id %>">
      </div>

      <div>
        <label for="datetime_start_box">
          Datetime start
        </label>

        <input type="datetime-local" id="datetime_start_box" name="query_datetime_start"
         value="<%= @the_planner_entry.datetime_start %>">
      </div>

      <div>
        <label for="tldraw_input_id_box">
          Tldraw input
        </label>

        <input type="text" id="tldraw_input_id_box" name="query_tldraw_input_id" value="<%= @the_planner_entry.tldraw_input_id %>">
      </div>

      <div>
        <label for="monthly_id_box">
          Monthly
        </label>

        <input type="text" id="monthly_id_box" name="query_monthly_id" value="<%= @the_planner_entry.monthly_id %>">
      </div>

      <div>
        <label for="daily_id_box">
          Daily
        </label>

        <input type="text" id="daily_id_box" name="query_daily_id" value="<%= @the_planner_entry.daily_id %>">
      </div>

      <div>
        <label for="weekly_id_box">
          Weekly
        </label>

        <input type="text" id="weekly_id_box" name="query_weekly_id" value="<%= @the_planner_entry.weekly_id %>">
      </div>

      <div>
        <label for="extra_id_box">
          Extra
        </label>

        <input type="text" id="extra_id_box" name="query_extra_id" value="<%= @the_planner_entry.extra_id %>">
      </div>

      <div>
        <label for="entry_content_box">
          Entry content
        </label>

        <input type="text" id="entry_content_box" name="query_entry_content" value="<%= @the_planner_entry.entry_content %>">
      </div>

      <div>
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location" value="<%= @the_planner_entry.location %>">
      </div>

      <div>
        <label for="datetime_end_box">
          Datetime end
        </label>

        <input type="text" id="datetime_end_box" name="query_datetime_end" value="<%= @the_planner_entry.datetime_end %>">
      </div>

      <button>
        Update planner entry
      </button>
    </form>
  </div>
</div>

<hr>
